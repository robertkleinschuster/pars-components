{
    "name": "pars/pars-components",
    "description": "",
    "license": "BSD-3-Clause",
    "keywords": [
        "pars"
    ],
    "support": {
        "docs": "https://docs.parsphp.org/pars-components/",
        "issues": "https://github.com/pars/pars-components/issues",
        "source": "https://github.com/pars/pars-components",
        "rss": "https://github.com/pars/pars-components/releases.atom",
        "forum": "https://discourse.parsphp.org/"
    },
    "require": {
        "php": ">=7.4",
        "pars/pars-mvc": "^1.0.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Pars\\Component\\": "src//"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParsTest\\Component\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laminas": {
            "module": "Pars\\Component"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
